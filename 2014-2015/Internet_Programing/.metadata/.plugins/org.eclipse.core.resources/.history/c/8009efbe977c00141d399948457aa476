package Day_7;

import java.util.List;
import java.util.Map;

public class RequestParser {
	private List<String> requestList;
	private Map<String, String> map;
	private static Request newRequest;
	
	public RequestParser(List<String> request){
		String[] firstLineParsed = request.get(0).split(" ");
		
		String[] secondLine = requestList.get(1).split(":");
		
		for(int i = 0; i < secondLine.length / 2; i = i + 2){
			map.put(secondLine[i], secondLine[i+1]);
		}
	
		newRequest = new Request(
				firstLineParsed[0], firstLineParsed[1], firstLineParsed[2], map, null);		
		
	}
	
	public static void main(String[] args) {
		System.out.println(newRequest.getMethod());
		System.out.println(newRequest.getResource());
		System.out.println(newRequest.getVersion());
		System.out.println(newRequest.getBody());
		System.out.println(newRequest.getHeaders());
	}
}
