package Day_8;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.PrintWriter;
import java.util.Scanner;

public class Response {
	
	public void response(PrintWriter out, Request r) throws FileNotFoundException{
		if(r.getMethod().equals("GET") && r.getResource().equals("/index.html")){
			printFile(out);
		}else{
			printError(out);
		}
	}
	
	public void printFile(PrintWriter out) throws FileNotFoundException{
		String path = "C:\\Users\\elsyser\\Desktop\\Programing\\TUES_Programing\\2014-2015\\Internet_Programing\\Internet_Programing\\src\\Day_8\\index.html";	
		Scanner sc = new Scanner(new File(path));
		String str = null;
		while(sc.hasNextLine()){
		    str = sc.nextLine();  
		    out.print(str);
		}
		sc.close();
	}
	
	public void printError(PrintWriter out){
		
	}
}
