package Day_8;

import java.io.File;
import java.io.PrintWriter;
import java.util.Scanner;

public class Response {
	
	public void response(PrintWriter out, Request r){
		if(r.getMethod().equals("GET")){
			printFile(out);
		}else{
			printError(out);
		}
	}
	
	public void printFile(PrintWriter out){
		String path = "C:\\Users\\elsyser\\Desktop\\Programing\\TUES_Programing\\2014-2015\\Internet_Programing\\Internet_Programing\\src\\Day_7\\index.html";	
		Scanner sc = new Scanner(new File(path));
		String str = null;
		while(sc.hasNextLine()){
		    str = sc.nextLine();  
		    out.print(str);
		}
	}
	
	public void printError(PrintWriter out){
		
	}
}
